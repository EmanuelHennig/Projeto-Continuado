<h1>Cadastrar Novo Livro</h1>

<form action="/livro/create" method="post" enctype="multipart/form-data">
  <div class="form-group mb-3">
    <label for="titulo">TÃ­tulo</label>
    <input
      type="text"
      id="titulo"
      name="titulo"
      class="form-control"
      required
    >
  </div>

  <div class="form-group mb-3">
    <label for="autor">Autor</label>
    <input
      type="text"
      id="autor"
      name="autor"
      class="form-control"
      required
    >
  </div>

  <div class="form-group mb-3">
    <label for="ano">Ano</label>
    <input
      type="number"
      id="ano"
      name="ano"
      class="form-control"
    >
  </div>

  <div class="form-group mb-3">
    <label for="isbn">ISBN</label>
    <input
      type="text"
      id="isbn"
      name="isbn"
      class="form-control"
    >
  </div>

  <div class="form-group mb-3">
    <label for="categoria">Categoria</label>
    <select
      id="categoria"
      name="categoria_id"
      class="form-control"
      required
    >
      <option value="">-- Selecione --</option>
      {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group mb-3">
    <label for="imagem">Capa do Livro</label>
    <input
      type="file"
      id="imagem"
      name="imagem"
      class="form-control"
    >
  </div>

  <button type="submit" class="btn btn-success">Salvar</button>
</form>
