<h2>Editar Autor</h2>

<form action="/autor/update/{{autor._id}}" method="post" class="w-50 mx-auto mt-4">
  <input type="hidden" name="id" value="{{autor._id}}">

  <div class="form-group">
    <label for="nome">Nome do Autor</label>
    <input
      type="text"
      id="nome"
      name="nome"
      class="form-control"
      value="{{autor.nome}}"
      required>
  </div>

  <button type="submit" class="btn btn-primary">Atualizar</button>
  <a href="/autor/list" class="btn btn-secondary">Cancelar</a>
</form>
